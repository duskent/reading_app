{
  "name": "reading_app",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Julian Ronayi <yuliy.ronayi@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node public/server.js",
    "local": "nodemon public/server.js",
    "build": "webpack",
    "build:watch": "webpack -w",
    "test": "jest --forceExit --coverage && codecov -t cfe7f70c-b7b6-40e6-a44d-25ab3f033979",
    "test-last-commit": "jest --forceExit --no-cache --onlyChanged --lastCommit",
    "test:watch": "jest --watch",
    "lint": "eslint --cache ./server"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/public"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/server/db/**",
      "**/server/graphql/**",
      "!**/node_modules/**",
      "!**/server/db/index.js",
      "!**/server/graphql/index.js",
      "!**/server/test/**"
    ],
    "moduleNameMapper": {
      "^mongoose$": "<rootDir>/node_modules/mongoose"
    }
  },
  "precommit": "lint",
  "prepush": "test",
  "dependencies": {
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "express-graphql": "^0.6.6",
    "graphql": "^0.10.3",
    "lodash": "^4.17.4",
    "mongoose": "^4.10.8",
    "pre-push": "^0.1.1",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "transliteration": "^1.6.2"
  },
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^21.0.2",
    "babel-loader": "7.1.2",
    "babel-polyfill": "6.26.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "codecov": "^2.3.0",
    "eslint": "^4.6.1",
    "eslint-plugin-react": "^7.3.0",
    "jest": "21.0.2",
    "jest-cli": "21.0.2",
    "nodemon": "^1.12.0",
    "pre-commit": "^1.2.2",
    "regenerator-runtime": "^0.11.0",
    "webpack": "3.5.6",
    "webpack-dev-server": "2.7.1"
  }
}
